/* Toggle Styles */

#wrapper {
    padding-right: 0;
    margin-top:80px;
    -webkit-transition: all 0.5s ease;
    -moz-transition: all 0.5s ease;
    -o-transition: all 0.5s ease;
    transition: all 0.5s ease;
}

#wrapper.toggled {
    padding-right: 340px;
}

#sidebar-wrapper {
    z-index: 1000;
    position: fixed;
    right: 340px;
    width: 0;
    height: 100%;
    margin-right: -340px;
    overflow-y: auto;
    background:#4d4d4d;

    -webkit-box-shadow: -12px 0px 21px -5px rgba(0,0,0,0.75);
    -moz-box-shadow: -12px 0px 21px -5px rgba(0,0,0,0.75);
    box-shadow: -12px 0px 21px -5px rgba(0,0,0,0.75);

    -webkit-transition: all 0.5s ease;
    -moz-transition: all 0.5s ease;
    -o-transition: all 0.5s ease;
    transition: all 0.5s ease;
}

#wrapper.toggled #sidebar-wrapper {
    width: 340px;
}

#page-content-wrapper {
    width: 100%;
    position: absolute;
    padding: 0;
}

#wrapper.toggled #page-content-wrapper {
    position: absolute;
    margin-left: -340px;
}

@media(min-width:768px) {
    #wrapper {
        padding-right: 340px;
    }

    #wrapper.toggled {
        padding-right: 0;
    }

    #sidebar-wrapper {
        width: 340px;
    }

    #wrapper.toggled #sidebar-wrapper {
        width: 0;
    }

    #page-content-wrapper {
        padding: 0;
        position: relative;
    }

    #wrapper.toggled #page-content-wrapper {
        position: relative;
        margin-left: 0;
    }
}